<% if @patron != nil%>
  <h2><%= @patron.first_name %> <%= @patron.last_name %></h2>
<br>
<h3>Edit patron:</h3>
  <form action="/patrons/<%= @patron.id %>" method="post">
    <input type="hidden" name="_method" value="patch">

    <label for ="first_name">Edit first name:</label>
    <input id="first_name" name="first_name" type="text" value="<%= @patron.first_name %>" required>
    <br>
    <label for ="last_name">Edit last name:</label>
    <input id="last_name" name="last_name" type="text" value="<%= @patron.last_name %>" required>
    <br>
    <button type="submit">Edit patron!</button>
  </form>
  <form action="/patrons/<%= @patron.id %>" method="post">
    <input type="hidden" name="_method" value="delete">
    <button type="submit">Delete patron</button>
  </form>
<% else %>
  <p> This patron does not exist.</p>
<% end %>
<br>


