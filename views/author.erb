<% if @author != nil%>
  <h2><%= @author.first_name %> <%= @author.last_name %></h2>
<br>
<h3>Edit author:</h3>
  <form action="/authors/<%= @author.id %>" method="post">
    <input type="hidden" name="_method" value="patch">

    <label for ="first_name">Edit first name:</label>
    <input id="first_name" name="first_name" type="text" value="<%= @author.first_name %>" required>
    <br>
    <label for ="last_name">Edit last name:</label>
    <input id="last_name" name="last_name" type="text" value="<%= @author.last_name %>" required>
    <br>
    <button type="submit">Edit author!</button>
  </form>
  <form action="/authors/<%= @author.id %>" method="post">
    <input type="hidden" name="_method" value="delete">
    <button type="submit">Delete author</button>
  </form>
  <br>
  <% if @books != nil%>
  <ul>
    <% @books.each do |book| %>
      <li><a href="/books/<%= book.id %>"><%= book.title %></a></li>
    <% end %>
  </ul>
<% else %>
  <p>There are currently no books to display for this author. </p>
<% end %>

<br>
<h4>Add author's book:</h4>
<form action="/authors/<%= @author.id %>" method="post">
  <input type="hidden" name="_method" value="patch">
  <div class="form-group">
    <label for="title">Title:</label>
    <input id="title" name="title" class="form-control" type="text" placeholder="Title">
    <label for="genre">Genre:</label>
    <input id="genre" name="genre" class="form-control" type="text" placeholder="Genre">
  </div>
  <button type="submit" class="btn">Add!</button>
</form>
<br>
<% else %>
  <p> This author does not exist.</p>
<% end %>
<br>
